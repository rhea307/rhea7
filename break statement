#include <stdio.h>

int main()
{
    int a,b,c,d,e,f,g,ch;
    ch=0;
    float h,i;
    printf("enter the value a");
    scanf("%d",&a);
    printf("enter the value b");
    scanf("%d",&b);
    printf("enter your choice:");
    scanf("%d",&ch);
    switch {
        case 1:
        c=a+b;
        printf("%d",c);
        break;
        case 2:
        d=a-b;
        printf("%d",d);
        break;
        case 3:
        e=a*b;
        printf("%d",e);
        break;
        case 4:
        g=a/b;
        printf("%d",g);
        break;
        default:
        printf("please enter the correct choice");
    }
    return 0;
}
